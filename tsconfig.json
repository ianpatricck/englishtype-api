{
    "compilerOptions": {
        "target": "es6",                         
        "module": "commonJS",                   
        "outDir": "./dist",                 
        "rootDir": "./src",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,  
        "esModuleInterop": true,         
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, 
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
